@model WebGSMT.Models.Device
@{
    Layout = null;
}
<div class="modal-dialog modal-dialog-centered modal-xl" role="document">
    <div class="modal-content">
        <form id="formCreateDevice">
            <!--Card header-->
            <div class="card-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm mới</h5>
            </div>
            <!--Card body-->
            <div class="modal-body">
                <!-- Tab Menu -->

                <div class="tab-content mt-5" id="myTabContent">
                    <div class="tab-pane fade show active" id="rolename" role="tabpanel" aria-labelledby="kt_tab_pane_2">
                        <div class="form-group ">
                            <label>Tên thiết bị:</label>
                            <input type="text" id="device-name" name="deviceName" class="form-control validateTextBox" placeholder="Nhập tên thiết bị hoặc tên giao thức" onchange="ExistDeviceCheck()" />
                            <span id="deviceNameValidate" style="color:red"></span>
                            <span id="Status" style="color:red"></span>
                        </div>
                        <div class="form-group ">
                            <label>Chi tiết:</label>
                            <input type="text" id="device-nameShow" name="deviceNameShow" class="form-control validateTextBox" />
                            <span id="deviceNameShowValidate" style="color:red"></span>
                        </div>
                        <div class="form-group ">
                            <label>Hãng:</label>
                            <input type="text" id="device-BranchOrProtocol" name="deviceBranchOrProtocol" class="form-control validateTextBox" />
                            <span id="deviceBranchOrProtocolValidate" style="color:red"></span>
                        </div>
                    </div>

                </div>
                <!--end::Example-->
                <!--end::Content-->
            </div>
            <!--end::card body-->
            <!--begin::footer-->
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary font-weight-bold" id="submit"></input>
                <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Đóng</button>
            </div>
        </form>
        <!--End::footer-->
    </div>
</div>
<script src="~/My_Js/Devices/create.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js" integrity="sha512-UdIMMlVx0HEynClOIFSyOrPggomfhBKJE28LKl8yR3ghkgugPnG6iLfRfHwushZl1MOPSY6TsuBDGPK2X4zYKg==" crossorigin="anonymous"></script>