@model WebGSMT.Models.Device
@{
    Layout =null;
}
<div class="modal-dialog modal-dialog-centered modal-xl" role="document">
    <div class="modal-content">
        <!--Card header-->
        <div class="card-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Device</h5>
        </div>
        <!--Card body-->
        <div class="modal-body">
            <div class="tab-content mt-5" id="myTabContent">
                <div class="tab-pane fade show active" id="rolename" role="tabpanel" aria-labelledby="kt_tab_pane_2">
                    <div class="form-group ">
                        <label>Tên thiết bị/giao thức:</label>
                        <input type="text" id="device-name" class="form-control validateTextBox" placeholder="Tên thiết bị hoặc giao thức" onchange="ExistDeviceCheck()" value="@Model.Name" readonly />
                        <span id="deviceNameValidate" style="color:red"></span>
                        <span id="Status" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label>Chi tiết:</label>
                        <input type="text" id="device-nameShow" class="form-control validateTextBox" placeholder="Chi tiết" value="@Model.NameShow"  />
                        <span id="deviceNameShowValidate" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label>Hãng:</label>
                        <input type="text" id="device-BranchOrProtocol" class="form-control validateTextBox" placeholder="Thiết bị/Giao Thức"  value="@Model.BranchOrProtocol" />
                        <span id="deviceBranchOrProtocolValidate" style="color:red"></span>
                    </div>
                </div>
            </div>

            <!--end::Example-->
            <!--end::Content-->
        </div>
        <!--end::card body-->
        <!--begin::footer-->
        <div class="modal-footer">
            <button type="button" class="btn btn-primary font-weight-bold" id="submit">Lưu</button>
            <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Đóng</button>
        </div>
        <!--End::footer-->
    </div>
</div>
<script src="~/My_Js/Devices/editDevice.js"></script>