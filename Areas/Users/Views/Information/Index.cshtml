@model WebGSMT.Models.Account
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<!--begin::Content-->
<div class="container" style="text-align:center">
    <!--begin::Card-->
    <div class="card card-custom">
        <!--begin::Header-->
        <div class="card-header py-3">
            <div class="card-title align-items-start flex-column">
                <h3 class="card-label font-weight-bolder text-dark">Thông tin tài khoản</h3>
                <span class="text-muted font-weight-bold font-size-sm mt-1">Quản lí thông tin tài khoản</span>
            </div>
            <div class="card-toolbar">
                <button type="reset" class="btn btn-primary mr-2" id="btnSaveChange">Lưu thay đổi</button>
                <a type="reset" class="btn btn-secondary" href="~/Users/Home/Index">Hủy</a>
            </div>
        </div>
        <!--end::Header-->
        <!--begin::Form-->
        <div class="container">
            <form class="form" name="informationForm">
                <div class="card-body">
                    <!--begin::Heading-->
                    <!--begin::Form Group-->
                    <div class="form-group row">
                        <label class="col-xl-3 col-lg-3 col-form-label mt-2">Tài khoản:</label>
                        <div class="col-lg-8">
                            <div class="input-group input-group-lg input-group-solid">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-user-circle"></i>
                                    </span>
                                </div>
                                <input class="form-control form-control-lg form-control-solid" type="text" readonly value="@Context.Session.GetString("UserName").ToString()" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-xl-3 col-lg-3 col-form-label mt-2">Mật khẩu:</label>
                        <div class="col-lg-8">
                            <div class="input-group input-group-lg input-group-solid">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="la la-key"></i>
                                    </span>
                                </div>
                                <input class="form-control form-control-lg form-control-solid" id="password" type="text" value="@Model.Password" />
                            </div>
                        </div>
                    </div>

                    <!--begin::Form Group-->
                    <span id="errorFullname" class="text-danger"></span>
                    <div class="form-group row">
                        <label class="col-xl-3 col-lg-3 col-form-label mt-2">Họ tên:</label>
                        <div class="col-lg-8">
                            <div class="input-group input-group-lg input-group-solid">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fas fa-spell-check"></i>
                                    </span>
                                </div>
                                <input class="form-control form-control-lg form-control-solid" id="fullName" name="fullName" type="text" value="@Model.FullName" />
                            </div>

                        </div>
                    </div>
                    <!--begin::Form Group-->
                    <span id="errorEmail" class="text-danger"></span>
                    <div class="form-group row">
                        <label class="col-xl-3 col-lg-3 col-form-label mt-2">Email:</label>
                        <div class="col-lg-8">
                            <div class="input-group input-group-lg input-group-solid">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="la la-at"></i>
                                    </span>
                                </div>
                                <input type="email" class="form-control form-control-lg form-control-solid" id="email" name="email" aria-describedby="emailHelp" placeholder="Email" value="@Model.Email" />
                            </div>
                        </div>

                    </div>
                    <!--begin::Form Group-->
                    <span id="errorDOB" class="text-danger"></span>
                    <div class="form-group row">
                        <label class="col-xl-3 col-lg-3 col-form-label mt-2">Ngày sinh:</label>
                        <div class="col-lg-8">
                            <div class="input-group input-group-btn input-group-solid">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="la la-calendar-plus" style="width:24px"></i>
                                    </span>
                                </div>
                                <input class="form-control form-control-lg form-control-solid" style="width:450px" id="datepicker" name="datepicker" value="@Model.formatDate()" />
                            </div>

                        </div>
                    </div>
                    <!--begin::Form Group-->
                    <span id="errorPhone" class="text-danger"></span>
                    <div class="form-group row">
                        <label class="col-xl-3 col-lg-3 col-form-label mt-2">Số điện thoại:</label>
                        <div class="col-lg-8">
                            <div class="input-group input-group-lg input-group-solid">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="la la-phone"></i>
                                    </span>
                                </div>
                                <input class="form-control form-control-lg form-control-solid" type="text" id="phone" name="phone" value="@Model.PhoneNumber" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!--end::Form-->
        </div>
        <!--end::Card-->
    </div>
</div>
<script src="~/Users_JS/Validate_Users.js"></script>
<script src="~/Users_JS/editUsers.js"></script>
<script>
    $(document).ready(function () {
            $('#datepicker').datepicker({
                clearBtn: true,
                format: "dd/mm/yyyy"
            });
        });
</script>