<!--Form Modal-->
<div class="modal fade modal-edit-account" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formEditAccount" aria-hidden="true"></div>

<!--Modal Delete-->
<div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="myModalLabel">Cảnh báo!</h3>
            </div>
            <div class="modal-body">
                <h6>Bạn có muốn xóa?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnDelteYes" href="#" data-dismiss="modal">Có</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Không</button>
            </div>
        </div>
    </div>
</div>

<!--Modal Import-->
<div class="modal fade" id="uploadModal" tabindex="-2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="myModalLabel">Tải lên file dữ liệu</h3>
            </div>
            <div class="modal-body">
                <input type="file" id="nameFile" name="nameFile" multiple accept=".csv" />
                <button type="button" class="btn btn-primary" onclick="uploadcsvfile()" style="float:right">Tải lên</button>
            </div>
        </div>
    </div>
</div>

