@model WebGSMT.Models.Account

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Account</h4>

<div class="card-header flex-wrap border-0 pt-6 pb-0" style="width:auto">
    <form asp-action="create" id="kt_form">
        <div class="tab-content">
            <!--begin::Tab-->
            <div class="tab-pane show active px-7" id="kt_user_edit_tab_1" role="tabpanel">
                <!--begin::Row-->
                <div class="row">
                    <div class="col-xl-2"></div>
                    <div class="col-xl-7 my-2">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                        <!--begin::Group-->
                        <div class="form-group row">
                            <label asp-for="UserName" class="col-form-label col-3 text-lg-right text-left"></label>
                            <div class="col-9">
                                <input class="form-control form-control-lg" type="text" asp-for="UserName">
                                @Html.ValidationMessage("UserNameExist","",new { @class="text-danger"})
                                @Html.ValidationMessageFor(a => a.UserName,"", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!--end::Group-->
                        <!--begin::Group-->
                        <div class="form-group row">
                            <label asp-for="FullName" class="col-form-label col-3 text-lg-right text-left"></label>
                            <div class="col-9">
                                <input class="form-control form-control-lg" type="text" asp-for="FullName">
                                @Html.ValidationMessageFor(a => a.FullName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!--end::Group-->
                        <!--begin::Group-->
                        <div class="form-group row">
                            <label asp-for="DOB" class="col-form-label col-3 text-lg-right text-left"></label>
                            <div class="col-9">
                                <input class="form-control form-control-lg" type="date" asp-for="DOB">
                                @Html.ValidationMessageFor(a => a.DOB, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!--end::Group-->
                        <!--begin::Group-->
                        <div class="form-group row">
                            <label asp-for="Email" class="col-form-label col-3 text-lg-right text-left"></label>
                            <div class="col-9">
                                <input class="form-control form-control-lg" type="text" asp-for="Email">
                                @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!--end::Group-->
                        <!--begin::Group-->
                        <div class="form-group row">
                            <label asp-for="PhoneNumber" class="col-form-label col-3 text-lg-right text-left"></label>
                            <div class="col-9">
                                <input class="form-control form-control-lg" type="text" asp-for="PhoneNumber">
                                @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-3 text-lg-right text-left"></label>
                            <div class="col-9">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                                </label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-3 text-lg-right text-left"></label>
                            <div class="form-group">
                                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                            </div>
                        </div>

                        <!--end::Group-->

                    </div>
                </div>
                <!--end::Row-->
            </div>
            <!--end::Tab-->
        </div>
    </form>
</div>
<hr />

<div>
    <a asp-action="Index">Back to List</a>
</div>

